
@{
    ViewData["Title"] = "Save";
}

<h1>Transactions</h1>
<hr />
<div class="jumbotron jumbotron-fluid">
    <div class="container">
        @if (ViewData["Error"] != null)
        {
            <h2 class="display-4">@ViewData["Error"]</h2>
        }
    </div>
    <div class="container">
        <table class="table">
            <thead>
                <tr>
                    <th>Date</th>
                    <th>Description</th>
                    <th>Type</th>
                    <th>Amount</th>
                </tr>
            </thead>
            <tbody>
                @if (Model != null)
                {
                    @foreach (TransactionViewModel item in Model)
                    {
                        <tr>
                            <td>@item.DatePosted</td>
                            <td>@item.Memo</td>
                            <td>@item.TransactionType</td>
                            <td>@item.Amount.ToString("C2")</td>
                        </tr>
                    }
                }                
            </tbody>
        </table>               
    </div>

</div>

